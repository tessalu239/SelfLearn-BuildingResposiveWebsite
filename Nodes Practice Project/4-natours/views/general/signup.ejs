<section class="bg-light py-8">
  <div class="col-md-6 offset-md-3">
    <div class="card p-5 m-2 info-card">
      <h5 class="text-primary text-uppercase fw-bold mb-4 text-center">
become a member
      </h5>
      <% if(typeof errors !== "undefined" && errors.length >0){ %>
        <% errors.forEach(err => { %>
          <p style="color:red;"><%= err %></p>
        <% }) %>
      <% } %>

      <form action="/signup" method="post" class="form">
        <label for="name" class="fw-semibold">Full Name*</label>
        <input
          type="text"
          class="form-control"
          placeholder="Full Name" id="name" name="name" value="<%=values.name%>"/>

        <% if(validationMsg.name) { %>
        <span style="color:red; font-size: small;"> <%= validationMsg.name %></span> <br>
          <% } %>

        <label for="email" class="fw-semibold">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email" name="email" 
          placeholder="name@example.com"
          value="<%=values.email%>""
        />
        <% if(validationMsg.email) { %>
          <span style="color:red; font-size: small;"> <%= validationMsg.email %></span> <br>
          <% } %>
        <label for="password" class="mt-3 fw-semibold">Password</label>
        <input
          type="password"
          class="form-control mb-3"
          placeholder="Password" id="password" name="password"
        />
        <% if(validationMsg.password) { %>
          <span style="color:red; font-size: small;"> <%= validationMsg.password %></span> <br>
          <% } %>

          <label for="passwordConfirm" class="mt-3 fw-semibold">Confirm Password</label>
          <input
            type="password"
            class="form-control mb-3"
            placeholder="Password" id="passwordConfirm" name="passwordConfirm"
          />
          <% if(validationMsg.passwordConfirm) { %>
            <span style="color:red; font-size: small;"> <%= validationMsg.passwordConfirm %></span> <br>
            <% } %>
        <input class="btn btn-primary text-uppercase px-auto" value="Get Started" type="submit"></input>
      </form>
    </div>
  </div>
</section>
