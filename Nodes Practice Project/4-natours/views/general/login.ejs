<section class="bg-light py-8">
  <div class="col-md-5 offset-md-3">
    <div class="card p-5 m-2 info-card">
      <h5 class="text-primary text-uppercase fw-bold mb-4 text-center">
        log into you account
      </h5>
      <% if(typeof errors !== "undefined" && errors.length >0){ %>
        <% errors.forEach(err => { %>
          <p style="color:red;"><%= err %></p>
        <% }) %>
      <% } %>

      <form action="/user/login" method="post" class="form">
        <label for="email" class="fw-semibold">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email" name="email" 
          placeholder="name@example.com"
          value="<%=values.email%>""
        />
        <% if(validationMsg.email) { %>
          <span style="color:red; font-size: small;"> <%= validationMsg.email %></span> <br>
          <% } %>
        <label for="password" class="mt-3 fw-semibold">Password</label>
        <input
          type="password"
          class="form-control mb-3"
          placeholder="Password" id="password" name="password"
        />
        <% if(validationMsg.password) { %>
          <span style="color:red; font-size: small;"> <%= validationMsg.password %></span> <br>
          <% } %>
        <button class="btn btn-primary text-uppercase px-auto">log in</button>
      </form>
    </div>
  </div>
</section>
