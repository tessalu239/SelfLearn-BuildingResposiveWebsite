<div class="col-md-4 d-flex align-self-stretch tour-card">
  <div class="card mb-4 p-4 bg-primary rounded-5">
    <img
      class="card-img-top border border-5 border-light rounded-5 image-card-border"
      src="<%= tour.imageCover.startsWith('/img/') ? '' : '/img/tours/' %><%= tour.imageCover %>"
      alt="<%= tour.name %>"
    />
    <div class="card-body p-4">
      <div class="d-flex justify-content-between mb-3 align-items-center">
        <h5 class="card-title fw-bold text-light mb-0 text-uppercase">
          <%= tour.name %>
        </h5>
        <div class="text-light text-end">
          <p class="d-inline fw-bold"><%= tour.ratingsAverage %></p>
          <i class="fas fa-star fa-2x"></i>
        </div>
      </div>
      <div class="summary text-light mb-3"><%=tour.summary%></div>
      <ul class="m-0 text-light list-unstyled">
        <li class="mb-1">
          <i class="fa-solid fa-location-dot"></i> &nbsp <%=
          tour.startLocation.description %>
        </li>
        <li class="mb-1">
          <i class="fas fa-clock"></i> &nbsp <%= tour.duration %> days
        </li>
      
        <li class="mb-1">
          <i class="fa-regular fa-calendar"></i> &nbsp <%=
          tour.startDates[0].toLocaleDateString('en-US',{month:'long',day:'numeric',year:'numeric'}) %> &nbsp
        </li>
      </ul>
    <div class="d-inline d-grid d-md-flex justify-content-end">
        <a href="#"
        class="cardDirection btn btn-primary text-light px-3 border-light mt-0 justify-content-end"
        role="button" data-bs-toggle="button" data-tour-id="<%=tour._id%>"
        >
        More Details
       </a>
     </div>
    </div>
    <!-- <% if (typeof user!=="undefined"&& user.role==='customer') { %> -->
    <!-- <% } %> -->
    </div>
  <div
    class="price border-light text-light fw-bold bg-primary text-center align-content-center"
  >
    $<%=tour.price%>
  </div>
</div>
