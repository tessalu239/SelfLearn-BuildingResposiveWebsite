<section class="container feature-meal-kit my-6">
  <div class="card my-8 bg-light">
    <h3 class="display-5 fw-bold text-center text-secondary my-4">
      Edit A Meal Kit
    </h3>
    <div class="col-md-12 ps-md-5 form">
      <div
        class="text-container d-flex flex-column justify-content-center h-100 mb-5"
      >
        <p class="text-md-start fst-italic text-sm-center text-dark">
          Changing information of the meal kit
        </p>

        <form
          method="post"
          action="/mealkits/edit/<%= mealkit._id %>"
          enctype="multipart/form-data"
        >
          <div class="my-3 mx-sm-5 ms-md-0">
            <label for="title">Title:</label>
            <input
              type="text"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
              id="title"
              name="title"
              value="<%= mealkit.title %>"
            />

            <label for="include">Includes:</label>
            <input
              type="text"
              class="fst-italic form-control form-control-lg rounded-5 my-2"
              value="<%= mealkit.include %>"
              id="include"
              name="include"
            />

            <!-- Description -->
            <label for="description">Description:</label><br />
            <textarea
              id="description"
              name="description"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
              rows="4"
              cols="50"
            >
<%= mealkit.description %></textarea
            ><br />

            <!-- Category -->
            <label for="category">Category:</label><br />
            <input
              type="text"
              id="category"
              name="category"
              value="<%= mealkit.category %>"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
            /><br />

            <!-- Price -->
            <label for="price">Price:</label><br />
            <input
              type="number"
              id="price"
              name="price"
              value="<%= mealkit.price %>"
              min="0.01"
              step="0.01"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
            /><br />

            <!-- Cooking Time -->
            <label for="cookingTime">Cooking Time (minutes):</label>
            <input
              type="number"
              id="cookingTime"
              name="cookingTime"
              min="1"
              value="<%= mealkit.cookingTime %>"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
            /><br />

            <!-- Servings -->
            <label for="serving">Servings:</label><br />
            <input
              type="number"
              id="serving"
              name="serving"
              min="1"
              value="<%= mealkit.serving %>"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
            /><br />

            <!-- Image URL -->
            <label for="imageUrl">Image URL:</label><br />
            <input
              type="file"
              id="imageUrl"
              name="imageUrl"
              accept="image/*"
              value="<%= mealkit.imageUrl %>"
              class="fst-italic form-control form-control-lg rounded-5 mt-2"
            /><br />

            <!-- Featured Meal Kit -->
            <label for="featuredMealKit">Featured Meal Kit:</label>
            <input
              type="checkbox"
              id="featuredMealKit"
              name="featuredMealKit"
              <% if (mealkit.featuredMealKit) { %> checked <% } %>
            />
          </br>

            <input
              type="submit"
              value="Save Changes"
              class="bg-primary form-control form-control-lg text-light fw-bold rounded-5 mt-4"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
